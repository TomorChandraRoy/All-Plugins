{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "b-blocks/modern-slider",
  "version": "1.0.0",
  "title": "Modern Slider",
  "category": "widgets",
  "description": "Short description of the Modern Slider",
  "keywords": ["Modern Slider"],
  "textdomain": "b-blocks",
  "attributes": {
    "alignment": {
      "type": "string",
      "default": "center"
    },
    "items": {
      "type": "array",
      "default": [
        {
          "title": "First slide One",
          "description": "Some representative placeholder content for the first slide.",
          "image": "https://images.pexels.com/photos/247597/pexels-photo-247597.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
          "buttonName": "",
          "buttonUrl": "https://pixabay.com/",
          "buttonNewTab": false
        },

        {
          "title": "Second slide Two",
          "description": "Description of feature 2",
          "image": "https://images.pexels.com/photos/259637/pexels-photo-259637.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
          "buttonName": "",
          "buttonUrl": "https://tastewp.com/",
          "buttonNewTab": false
        },

        {
          "title": "Third slide Three",
          "description": "Some representative placeholder content for the Three slide.",
          "image": "https://cdn.pixabay.com/photo/2024/11/19/12/30/whistling-wind-9208906_640.jpg",
          "buttonName": "",
          "buttonUrl": "https://www.facebook.com/",
          "buttonNewTab": false
        }
      ]
    },
    "marginValues": {
      "type": "object",
      "default": {
        "top": "0px",
        "right": "0px",
        "bottom": "0px",
        "left": "0px"
      }
    },
    "radiusValues": {
      "type": "object",
      "default": {
        "top": "2px",
        "right": "2px",
        "bottom": "2px",
        "left": "2px"
      }
    },
    "selectedDevice": {
      "type": "string",
      "default": "desktop"
    },
    "sliderHeight": {
      "type": "string",
      "default": "24rem"
    },

    "descriptionGap": {
      "type": "string",
      "default": "20px"
    },
    "tagName": {
      "type": "string",
      "default": "h2"
    },
    "activeIndex": {
      "type": "number",
      "default": 0
    },
    "color": {
      "type": "string",
      "default": "#4429274f"
    },
    "headeingColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "headeingPaddingValues": {
      "type": "object",
      "default": {
        "top": "5px",
        "right": "0px",
        "bottom": "5px",
        "left": "0px"
      }
    },

    "typography": {
      "type": "object",
      "default": {
        "fontFamily": "Default",
        "fontCategory": "sans-serif",
        "fontWeight": 100,
        "fontSize": {
          "desktop": 35,
          "tablet": 27,
          "mobile": 19
        },
        "fontStyle": "normal",
        "textTransform": "none",
        "textDecoration": "auto",
        "lineHeight": "135%",
        "letterSpace": "0px"
      }
    },
    "selectedAnimation": {
      "type": "string",
      "default": "side-in-left"
    },
    "animationDelay": {
      "type": "number",
      "default": 0
    },
    "animationDuration": {
      "type": "number",
      "default": 0.7
    },

    "decTypography": {
      "type": "object",
      "default": {
        "fontFamily": "Default",
        "fontCategory": "sans-serif",
        "fontWeight": 100,
        "fontSize": {
          "desktop": 25,
          "tablet": 20,
          "mobile": 15
        },
        "fontStyle": "normal",
        "textTransform": "none",
        "textDecoration": "auto",
        "lineHeight": "135%",
        "letterSpace": "0px"
      }
    },
    "decAnimation": {
      "type": "string",
      "default": "side-in-right"
    },
    "decAnimationDelay": {
      "type": "number",
      "default": 0
    },
    "decAnimationDuration": {
      "type": "number",
      "default": 0.7
    },
  
    "buttonTypography": {
      "type": "object",
      "default": {
        "fontFamily": "Default",
        "fontCategory": "sans-serif",
        "fontWeight": 500,
        "fontSize": {
          "desktop": 25,
          "tablet": 20,
          "mobile": 15
        },
        "fontStyle": "normal",
        "textTransform": "uppercase",
        "textDecoration": "auto",
        "lineHeight": "135%",
        "letterSpace": "0px"
      }
    },
    "buttonAnimation": {
      "type": "string",
      "default": "zoom-in"
    },
    "buttonAnimationDelay": {
      "type": "number",
      "default": 0
    },
    "buttonAnimationDuration": {
      "type": "number",
      "default": 0.7
    },

    "colors": {
      "type": "object",
      "default": {
        "color": "#FAFAFA",
        "bgType": "solid",
        "bg": "#610A0A00",
        "gradient": "linear-gradient(135deg, #4527a4, #8344c5)"
      }
    },
    "buttonHoverColor": {
      "type": "object",
      "default": {
        "color": "#000000",
        "bgType": "solid",
        "bg": "#ffffff",
        "gradient": "linear-gradient(135deg, #fe6601, #fbb040)"
      }
    },
    "buttonBorder": {
      "type": "object",
      "default": {
        "width": 3,
        "style": "solid",
        "color": "#fafafa"
      }
    },
    "buttonRadiusValues": {
      "type": "object",
      "default": {
        "top": "3px",
        "right": "3px",
        "bottom": "3px",
        "left": "3px"
      }
    },
    "buttonPaddingValues": {
      "type": "object",
      "default": {
        "top": "10px",
        "right": "20px",
        "bottom": "10px",
        "left": "20px"
      }
    }
  },

  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {}
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./view.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}
